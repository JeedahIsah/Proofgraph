{
  "name": "@proofgraph/services",
  "version": "0.1.0",
  "description": "Backend microservices for ProofGraph decentralized knowledge graph",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:ingestion\" \"npm run dev:graph\" \"npm run dev:verification\" \"npm run dev:ai\"",
    "dev:ingestion": "cd ingestion && npm run dev",
    "dev:graph": "cd graph && npm run dev",
    "dev:verification": "cd verification && npm run dev",
    "dev:ai": "cd ai-integration && npm run dev",
    "build": "npm run build:ingestion && npm run build:graph && npm run build:verification && npm run build:ai",
    "build:ingestion": "cd ingestion && npm run build",
    "build:graph": "cd graph && npm run build",
    "build:verification": "cd verification && npm run build",
    "build:ai": "cd ai-integration && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "setup": "npm run setup:ingestion && npm run setup:graph && npm run setup:verification && npm run setup:ai",
    "setup:ingestion": "cd ingestion && npm install",
    "setup:graph": "cd graph && npm install",
    "setup:verification": "cd verification && npm install",
    "setup:ai": "cd ai-integration && npm install"
  },
  "keywords": [
    "microservices",
    "nodejs",
    "typescript",
    "knowledge-graph",
    "blockchain",
    "ai"
  ],
  "author": "ProofGraph Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "nodemon": "^3.0.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.0.0",
    "winston": "^3.10.0",
    "joi": "^17.9.0",
    "redis": "^4.6.0",
    "pg": "^8.11.0",
    "neo4j-driver": "^5.12.0",
    "ipfs-http-client": "^60.0.0",
    "@stacks/transactions": "^6.0.0",
    "@stacks/network": "^6.0.0",
    "langchain": "^0.0.200",
    "openai": "^4.0.0"
  },
  "workspaces": [
    "ingestion",
    "graph",
    "verification",
    "ai-integration",
    "shared"
  ]
}